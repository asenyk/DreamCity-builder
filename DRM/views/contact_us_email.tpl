<div style="width: 800px;margin: 0 auto;">
    <div style="text-align:right;font-size:26px;font-variant:small-caps;color:#063F6C !important;margin:-3px auto;width:95%;white-space:nowrap;overflow:hidden;">{i18n::contact_us}</div>
    <table cellpadding="0" cellspacing="0" border="0" style="width:95%;margin:0 auto;border:1px dotted #CCCCCC;font-size:12px;">
        <tr style="background-color: #EAEAEA;">
            <td style="width:200px !important;text-align: right;padding: 15px 10px 5px 0;">{i18n::name}:</td>
            <td>
                <p style="padding: 15px 10px 5px 0;"><strong>{name} {sename}</strong></p>
            </td>
        </tr>
        <tr style="background-color: #F3F3F3;">
            <td style="width:200px !important;text-align: right;padding: 15px 10px 5px 0;">{i18n::email}:</td>
            <td>
                <p style="padding: 15px 10px 5px 0;">{email}</p>
            </td>
        </tr>
        <tr style="background-color: #EAEAEA;">
            <td style="width:200px !important;text-align: right;padding: 15px 10px 5px 0;">{i18n::country}:</td>
            <td>
                <p style="padding: 15px 10px 5px 0;"><strong>{country}</strong></p>
            </td>
        </tr>
        <tr style="background-color: #F3F3F3;">
            <td style="width:200px !important;text-align: right;padding: 15px 10px 5px 0;">{i18n::city}:</td>
            <td>
                <p style="padding: 15px 10px 5px 0;"><strong>{city}</strong></p>
            </td>
        </tr>
        <tr style="background-color: #EAEAEA;">
            <td style="width:200px !important;text-align: right;padding: 15px 10px 5px 0;">{i18n::phone}:</td>
            <td>
                <p style="padding: 15px 10px 5px 0;"><strong>{phone}</strong></p>
            </td>
        </tr>
        <tr style="background-color: #F3F3F3;">
            <td style="width:200px !important;text-align: right;padding: 15px 10px 5px 0;">{i18n::theme}:</td>
            <td>
                <p style="padding: 15px 10px 5px 0;"><strong>{theme}</strong></p>
            </td>
        </tr>
        <tr style="background-color: #EAEAEA;">
            <td style="width:200px !important;text-align: right;padding: 15px 10px 5px 0;">{i18n::text}:</td>
            <td>
                <p style="padding: 15px 10px 5px 0;"><strong>{text}</strong></p>
            </td>
        </tr>
    </table>
</div>